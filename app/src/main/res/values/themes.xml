            <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

            <!-- Your custom style -->
    <style name="CategoryTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item> <!-- Or your desired color -->
        <item name="android:layout_marginBottom">8dp</item>
    </style>
      <!-- Base application theme. -->
    <style name="Theme.YourAppName" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark
        </item> <!-- Or a different variant -->
        <item name="colorOnPrimary">@color/white
        </item> <!-- Or your desired text/icon color on primary -->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/teal_700</item> <!-- Example -->
        <item name="colorOnSecondary">@color/black
        </item> <!-- Or your desired text/icon color on secondary -->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TimeText">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:text">--:--</item>
    </style>

    <style name="ButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">end</item> <!-- Or any other gravity you need -->
    </style>

    <style name="ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

